          </p>
          </div>
          <div class="col-md-3">
          </div>
        </div>
      </div>

      <div class="row text-center">
        {{#each model as |audiencia|}}
          <div class="item">
            {{#if audiencia.thumbMedium}}
              {{#link-to 'audiencia' audiencia.id class='audiencia_link'}}
                <img src="{{audiencia.thumbMedium}}" alt="{{audiencia.nombre}}">
              {{/link-to}}
            {{else if audiencia.logo}}
              {{#link-to 'audiencia' audiencia.id class='audiencia_link'}}
                <img
                  src={{asset-map (concat 'img/ICONOS_TEXTO/' audiencia.logo)}}
                  alt={{audiencia.nombre}}
                >
              {{/link-to}}
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>
  </section>
