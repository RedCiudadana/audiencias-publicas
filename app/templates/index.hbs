          <img src="/img/Custom processes/1.png">
          <h3>
          Comenta
          </h3>
        </div>
      </div>
    </div>
  </section>

  <section style="background-color: #D0D2D3; padding: 25px;">
    <div class="container" style="background-color: #FFF;">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-3">
          </div>
          <div class="col-md-6 text-center">
