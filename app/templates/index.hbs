      <img class="banner__logo" src="/img/front-banner.png" style="width: 100%;">
    </div>
  </section>

  <section class="section-top" style="background-color: #271D41;">
    <div class="container">
      <div id="processes" class="row">
        <div class="col-md-3 text-center">
          <img src="/img/Custom processes/1.png">
          <h3>
          Accesa a las Audiencias
          </h3>
        </div>
        <div class="col-md-3 text-center">
          <img src="/img/Custom processes/1.png">
          <h3>
